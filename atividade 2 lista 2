import java.util.Scanner;

public class App {
    public static void main(String[] args) throws Exception {
        Scanner sc = new Scanner(System.in); 
        int numero;
        
        System.out.print("escolha um numero: ");
        numero = sc.nextInt();

        if (numero <= 3) { 
            System.out.println("o numero escolhido é igual ou menor que 3");
           
        }
        if (numero >= 25)  {
            System.out.println("o numero escolhido é igual ou maior que 25!");
        }

        else if (numero >3 && numero <25)  { 
         System.out.println("o numero escolhido esta entre 4 e 24!");

        }
      sc.close();

      
    }
}
